<% include ../partials/header %>

<!--NAVIGATION BAR FOR ADMIN-->
<% include ../partials/userNav %>

<% include ../partials/alerts %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card transparent-container ">
              <div class="card-header text-center login-card-header">
                <h4 class="h3-login login-h4">Add Project</h4>
                <hr class="hr-login">
              </div>
                <div class="card-block">
                  <form class="p-3" action="/user/1/project/add" method="POST">
                      
                    <div class="form-group">
                      <label class="form-control-label">Title</label>
                      <input type="text" name="project[name]" placeholder="Project Title" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Mentor</label>
                      <input type="text" name="project[mentor]" placeholder="Name of mentor" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Project Domain</label>
                      <input type="text" name="project[domain]" placeholder="Nme of the Domain" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Project Period</label>
                        <input type="Number" name="project[period]" min="0" placeholder="Period of project in weeks" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Ref book</label>
                      <textarea name="project[description]" cols="30" rows="10" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="addc-btn">Add Project</button>
                  </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
<script>
  CKEDITOR.replace('project[description]');
</script>


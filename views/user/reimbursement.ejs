<% include ../partials/header %>

<!--NAVIGATION BAR FOR ADMIN-->
<% include ../partials/userNav %>

<% include ../partials/alerts %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
          <div class="card transparent-container">
            <div class="card-header text-center login-card-header">
                <h4 class="h3-login login-h4">Reimbursement Request</h4>
                <hr class="hr-login">
              </div>
                <div class="card-block">
                  <form class="p-3" action="/user/1/reimbursement" method="POST">
                      
                    <div class="form-group">
                      <label class="form-control-label">Name</label>
                      <input type="text" name="name" placeholder="<%=currentUser.firstName%>" class="form-control" required>
                    </div>

                    <div class="form-group">
                      <label class="form-control-label">Roll Number</label>
                      <input type="text" name="roll" placeholder="Roll Number" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Reimbursement Type</label>
                      <input type="text" name="type" placeholder="Personal/OD" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-control-label">Amount</label>
                        <input type="text" name="amount" placeholder="â‚¹" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="img">Upload Bill image:</label>
                        <input type="file" id="bill" name="bill" accept="image/*">
                    </div>

                    <div class="form-group">
                      <label class="form-control-label">Reimbursement description</label>
                      <textarea name="description" cols="30" rows="10" class="form-control"></textarea>
                    </div>

                    <button type="submit"class="addc-btn" class="btn btn-warning btn-block">Apply</button>
                  </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>

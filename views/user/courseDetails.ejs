<% include ../partials/header %>

<!--NAVIGATION BAR FOR USER-->
<% include ../partials/userNav %>

<!--course DETAILS-->

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card transparent-container">
                <div class="card-header">
                    <h4 class="text-center"> <%= course.name %> </h4>
                    <hr class="hr-login">
                </div>
                <small class="text-muted px-3 py-2">Mentor :  <%= course.mentor %> </small>
                <small class="text-muted px-3 py-2">Code :  <%= course.code %> </small>
                <small class="text-muted px-3 py-2">Category :  <%= course.domain %>  </small>
                <small class="text-muted px-3 py-2">Period :  <%= course.period %>  </small>
                <div class="card-body">
                    <p class="card-text">
                        <%- course.description %> 
                    </p>
                </div>
            </div>
            
            <div class="card my-3 transparent-container">
                <% if(currentUser) { %>
                <p class="p-3">
                  <button class="lac" type="button" data-toggle="collapse" data-target="#collapseCommentBox" aria-expanded="false" aria-controls="collapseCommentBox">
                    Leave a comment
                  </button>
                </p>
                <div class="collapse" id="collapseCommentBox">
                 <form action="/courses/details/<%=course._id%>/comment" method="POST">
                    <textarea name="comment" class="form-control"></textarea>
                    <input type="submit" class="addc-btn">
                 </form>
                </div>

            <% } %>
                
                
           
            </div>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $('button').on('click',  function() {
       $(this).prev().toggleClass('d-none'); 
      $(this).next().next().toggleClass('d-none');
    });
</script>
<% include ../partials/footer %>